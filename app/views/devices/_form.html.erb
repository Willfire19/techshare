<%= form_for @device, :html => {:multipart => true} do |f| %>
  
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4 col-xs-8 col-xs-offset-2">
      <% if @device.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@device.errors.count, "error") %> prohibited this device from being saved:</h2>

          <ul>
          <% @device.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form-group">
        <!-- <%= f.label :name %><br> -->
        <%= f.text_field :name, autofocus: true, placeholder: "Name", class: "form-control" %>
      </div>
      <div class="form-group">
        <!-- <%= f.label :availability %><br> -->
        <%= f.select :availability, options_for_select([["Available", "Available"], ["Unavailable", "Unavailable"]]), autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <!-- <%= f.label :image, text: "Upload a Picture!", style: "color:white" %><br> -->
        <label style="color:white">Upload a Picture!</label>
        <%= f.file_field :image, autofocus: true, class: "form-control", text: "Upload a Picture!" %>
      </div>
      <div class="form-group">
        <label style="color:white">Who would you like borrowers to contact in order to borrow this device?</label></br>
        <%= f.radio_button :contact_email, @user.email, checked: true %><%= label :contact_email, @user.email %>
        <%= f.radio_button :contact_email, 'joshangeley@coshx.com' %><%= label :contact_email, 'TechShare' %>
      </div>
      <div class="actions">
        <%= f.submit "Add New Device!", class: "btn btn-lg btn-primary btn-block" %>
      </div>
    </div>
  </div>

<% end %>
