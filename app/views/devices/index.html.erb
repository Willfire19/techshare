<div class="row">
  <div class="col-xs-12 col-sm-10 col-sm-offset-1">
    <div class="col-xs-12">
      <h1>Devices</h1>
    </div>
  <div class="row">
    <div class="col-xs-12">
      <div class="row">
        <% @devices.each do |device| %>
          <div class="col-xs-6 col-sm-4 col-md-4">
            <%= render 'devices/device', :device => device %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>