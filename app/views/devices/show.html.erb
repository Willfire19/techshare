<p id="notice"><%= notice %></p>
<div class="row">
	<div class="col-sm-6 col-sm-offset-3 col-xs-8 col-xs-offset-2">
		<%= render "device", :device => @device %>
		<% if current_user == @device.user %>
			<div class="row" style="padding:20px">
				<div class="col-xs-12">
					<%= link_to 'Edit', edit_device_path(@device), style: "color:white; font-size:150%" %>
				</div>
			</div>
		<% end %>
	</div>
</div>
